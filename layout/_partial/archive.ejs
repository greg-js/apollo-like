<% if (blogfront) { %>
  <div id="main">
    <% page.posts.each(function(post){ %>
      <%- partial('article', {post: post, index: true}) %>
    <% }) %>
    <% if (page.total > 1){ %>
      <nav id="page-nav">
        <%- paginator({
          prev_text: '&laquo; Prev',
          next_text: 'Next &raquo;'
        }) %>
      </nav>
    <% } %>
  </div>
<% } else { %>
  <div id="main">
    <div class="archive">
      <% page.posts.each(function(item){ %>
        <div class="<%= item.layout %> archived">
          <div class="entry-content">
            <footer class="entry-meta-header archive-left">
              <span class="meta-elements date">
                <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
              </span>
            </footer>
            <header>
              <% if (item.title){ %>
                <% if (item.link){ %>
                  <% if (item.title){ %>
                    <h4 class="title link"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h4>
                  <% } else { %>
                    <h4 class="title link"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h4>
                  <% } %>
                <% } else { %>
                  <h4><a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h4>
                <% } %>
              <% } else { %>
                  <h4>(No title)</h4>
              <% } %>
            </header>
          </div>
        </div >
      <% }); %>
      <% if (page.total > 1){ %>
        <nav id="page-nav">
          <%- paginator({
            prev_text: '&laquo; Prev',
            next_text: 'Next &raquo;',
            show_all: true
          }) %>
        </nav>
      <% } %>
    </div>
  </div>
<% } %>
