// Colors
color-default = #494343
color-title = #222
color-border = #2c2c2c
color-link = #33a6b8
color-background = #ddd
color-meta = #999
color-footer = #777

@import 'social.css';

/* alef-regular - latin */
@font-face {
  font-family: 'Alef';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/alef-v6-latin-regular.eot')
  src: local('Alef Regular'), local('Alef-Regular'),
       url('../fonts/alef-v6-latin-regular.eot?#iefix') format('embedded-opentype'),
       url('../fonts/alef-v6-latin-regular.woff2') format('woff2'),
       url('../fonts/alef-v6-latin-regular.woff') format('woff'),
       url('../fonts/alef-v6-latin-regular.ttf') format('truetype'),
       url('../fonts/alef-v6-latin-regular.svg#Alef') format('svg')
}

/* alef-700 - latin */
@font-face {
  font-family: 'Alef';
  font-style: normal;
  font-weight: 700;
  src: url('../fonts/alef-v6-latin-700.eot');
  src: local('Alef Bold'), local('Alef-Bold'),
       url('../fonts/alef-v6-latin-700.eot?#iefix') format('embedded-opentype'),
       url('../fonts/alef-v6-latin-700.woff2') format('woff2'),
       url('../fonts/alef-v6-latin-700.woff') format('woff'),
       url('../fonts/alef-v6-latin-700.ttf') format('truetype'),
       url('../fonts/alef-v6-latin-700.svg#Alef') format('svg')
}

/* source-code-pro-300 - latin */
