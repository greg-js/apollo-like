      url('../fonts/source-code-pro-v6-latin-300.woff2') format('woff2'),
      url('../fonts/source-code-pro-v6-latin-300.woff') format('woff'),
      url('../fonts/source-code-pro-v6-latin-300.ttf') format('truetype'),
      url('../fonts/source-code-pro-v6-latin-300.svg#SourceCodePro') format('svg')
}

