.small {
  font-size: 50%
  color: color-default
}

.jumbo {
  font-size: 200%
  background: darkgrey
  color: white
  border: 2px solid #97a93d
  padding: 1em
}

.front-top {
  width: 75%
  margin-left: auto
  margin-right: auto
  margin-bottom: 2em
  position: relative
  .pic {
    border-radius: 50%
    border: 2px solid sandybrown
    max-height: 4em
    position: absolute
    right: -1.75em
    top: -0.75em
  }
}

.front-tagcloud {
  text-align: center
}

.front-segment {
  background: lightgrey
  padding: 1em
  margin-bottom: 1.5em
}

.front-segment-lead-right {
  color: #97a93d
  font-size: 150%
  text-align: right
}

.front-segment-lead-left {
  color: #97a93d
  font-size: 150%
  text-align: left
}

.front-bio {
  font-size: 115%
  margin-top: 1em
}

.front-archived {
  margin: 0.25em
}

table {
  border-collapse: collapse
  width: 100%
  margin-top: 1em
  margin-bottom: 1em
  th,td {
    padding: 0.25em
    text-align: center
  }
  td {
    border-top: 1px solid white
  }
  th {
    text-align: center
    font-weight: bold
  }
  .front-table-link {
    font-weight: bold
  }
  .front-table-date {
      text-align: right
    }
  .front-table-category {
    a {
      color: color-default
      transition: color 1s
    }
    a:hover {
      color: color-link
    }
  }
}

.archive-left {
  clear: both
  float: left
  top: 0 !important
  height: auto !important
}

