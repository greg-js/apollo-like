.archive
  margin-bottom: 1em

#page-nav
  text-align: center
  text-transform: uppercase
  font-size: 95%
  font-weight: bold
  letter-spacing: .1em
  a, span
    display: inline-block
    min-width: 1.2em
    padding: 6px 8px
    margin: 1px 5px 1px 5px
    border-radius: 3px
    background-clip: padding-box
  a
    color: color-default
    text-decoration: none
    &:hover
      background-color: #f5f5f5
  .page-number
    display: inline-block
  .current
    background: #ccc
    color: #fff
  .space
    color: color-border
  .next
    min-width: 5em

.archived-post
  padding: 0.5em
  margin: 0.5em
  border-radius: 15px
  background: #fff

  a
    cursor: pointer

  .archived-post-metadata
    font-size: 90%
    padding: 0 0.5em 0 0.5em

    .archived-post-metadata-date
      float: right
      color: darkgray

    .archived-post-metadata-category-div
      color:darkgray

    .archived-post-metadata-tags-div
      color:darkgray
